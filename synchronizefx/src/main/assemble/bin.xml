<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/..</directory>
			<outputDirectory>${artifactId}-${version}/</outputDirectory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>de.saxsys.synchronizefx:synchronizefx</include>
			</includes>
			<binaries>
				<outputDirectory>${artifactId}-${version}/bin/</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>true</includeDependencies>
				<dependencySets>
					<dependencySet>
						<outputDirectory>${artifactId}-${version}/bin/</outputDirectory>
						
						<useProjectArtifact>true</useProjectArtifact>
						<excludes>
							<exclude>ch.qos.logback:logback-classic</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>de.saxsys.synchronizefx:synchronizefx</include>
			</includes>
			<binaries>
				<outputDirectory>${artifactId}-${version}/bin/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>${artifactId}-${version}/bin-optional/</outputDirectory>
						<useProjectArtifact>true</useProjectArtifact>
						<includes>
							<include>ch.qos.logback:logback-classic</include>
						</includes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>